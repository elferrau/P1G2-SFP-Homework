//Tecer Video
var numero_uno = 23;

var numero_dos = 30;

if(numero_uno > numero_dos){
  console.log("Entre al bloque");
}

if(numero_dos > numero_uno){
  console.log("Entre al bloque");
}

if(numero_uno < numero_dos){
  console.log("Entre al bloque");
}

if(!(numero_uno > numero_dos)){
  console.log("Entre al bloque");
}

if(!(numero_uno < numero_dos)){
  console.log("Entre al bloque");
}

if(numero_uno && true){
  console.log("Entre al bloque");
}

if(numero_uno && false){
  console.log("Entre al bloque");
}

if(true && true){
  console.log("Entre al bloque");
}

if(false || false){
  console.log("Entre al bloque");
}

if(numero_uno == numero_dos){
  console.log("Entre al bloque");
}

if(numero_uno === numero_dos){
  console.log("Entre al bloque");
}

if(numero_uno != numero_dos){
  console.log("Entre al bloque");
}

if(numero_uno !== numero_dos){
  console.log("Entre al bloque");
}

if(true){
  console.log("La condición fue verdadera");
  
}
if(!false){
  console.log("La condición fue verdadera");
  
}

}else if(false){

}
else{
  console.log(":P");
}

