//Primer video:
var edad = 19;
edad++;

var punto_flotantes = 12.5;


/*
Operadores aritémeticos 
División = /
Multiplicación = *
Suma = +
Resta = -
Módulo = %
*/

var resultado_suma = edad + punto_flotantes;
var resultado_suma = edad - punto_flotantes;
var resultado_suma = edad * 2;
var resultado_suma = edad / 2;
var resultado_suma = edad % 2;

console.log(edad + 3);
console.log(edad + punto_flotantes);
console.log(resultado_suma);
console.log(es_par(2));

function es_par(numero){
  if(numero % 2 == 0){
    return true;
  }
  return false;
}

